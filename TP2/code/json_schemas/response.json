  "properties": {
    "action": {
      "enum": ["register", "update", "locate", "leave"],
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "status": {
      "enum": ["success", "invalid_request", "invalid_action", "denied", "not_found", "server_error", "unauthorized", "unavailable"],
      "type": "string"
    }
  },
  "required": ["action", "status", "message"],
  "additionalProperties": false
}